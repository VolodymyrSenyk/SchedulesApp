<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.senykvolodymyr.core.customview.MessageUi" />

        <variable
            name="model"
            type="MessageUi" />

    </data>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/output_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="?attr/paddingSmall"
        android:text="@{model.message}"
        android:textSize="?attr/textSizeVerySmall"
        android:textStyle="italic"
        tools:text="@string/message_empty_field" />

</layout>
