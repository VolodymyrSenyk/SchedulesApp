<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="com.senykvolodymyr.presentation.feature.schedules.OneDayScheduleViewModel" />

        <variable
            name="viewModel"
            type="OneDayScheduleViewModel" />

    </data>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_add_pair"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/AppTheme.ButtonFilled"
        android:layout_marginTop="?attr/marginSmall"
        android:onClick="@{v -> viewModel.onAddClick()}"
        app:icon="?attr/iconAdd" />

</layout>
