<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.senyk.volodymyr.schedulesapp.presentation.feature.common.entity.PairUi" />

        <import type="com.senyk.volodymyr.schedulesapp.presentation.feature.schedules.OneDayScheduleViewModel" />

        <variable
            name="model"
            type="PairUi" />

        <variable
            name="viewModel"
            type="com.senyk.volodymyr.schedulesapp.presentation.feature.schedules.OneDayScheduleViewModel" />

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@{model.typeColorInt}"
        android:onClick="@{v -> viewModel.onPairClick(model)}"
        android:padding="@dimen/padding_small"
        tools:backgroundTint="@color/colorLecture">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/pair_time_output"
                style="@style/PairDataOutputFieldStyle"
                android:layout_weight="1"
                android:text="@{model.startTime}"
                tools:text="08:30" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/pair_name_output"
                    style="@style/PairDataOutputFieldStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{model.name}"
                    tools:text="OOP" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/pair_teacher_output"
                    style="@style/PairDataOutputFieldStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{model.teacher}"
                    tools:text="Ivanov" />

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/pair_type_output"
                style="@style/PairDataOutputFieldStyle"
                android:text="@{model.type}"
                android:visibility="gone"
                tools:text="@string/pair_type_lecture" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/pair_place_output"
                style="@style/PairDataOutputFieldStyle"
                android:layout_weight="1"
                android:text="@{model.place}"
                tools:text="Y2 719" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>
