<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.senyk.volodymyr.schedulesapp.presentation.feature.common.entity.ScheduleUi" />

        <import type="com.senyk.volodymyr.schedulesapp.presentation.feature.schedulesmanager.SchedulesManagerViewModel" />

        <variable
            name="model"
            type="ScheduleUi" />

        <variable
            name="viewModel"
            type="com.senyk.volodymyr.schedulesapp.presentation.feature.schedulesmanager.SchedulesManagerViewModel" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@{model.tintColorInt}"
        android:padding="@dimen/padding_small"
        app:cardCornerRadius="12dp"
        tools:backgroundTint="@color/colorSelected">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/schedule_name_field"
                style="@style/SimpleTextFieldStyle"
                android:layout_width="match_parent"
                android:text="@{model.name}"
                android:textStyle="bold"
                tools:text="My first schedule" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/schedule_date_of_creation"
                style="@style/SimpleTextFieldStyle"
                android:text="@{model.createdAt}"
                tools:text="@string/schedule_date_of_creation_output_pattern" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/schedule_date_of_update"
                style="@style/SimpleTextFieldStyle"
                android:text="@{model.updatedAt}"
                tools:text="@string/schedule_date_of_update_output_pattern" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/schedule_is_sat_working"
                style="@style/SimpleTextFieldStyle"
                android:text="@string/schedule_type_saturday_is_working"
                android:visibility="@{model.saturdayWorkingDay ? View.VISIBLE : View.GONE}"
                tools:visibility="visible" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/schedule_is_num_denom_system"
                style="@style/SimpleTextFieldStyle"
                android:text="@string/schedule_type_numerator_denominator"
                android:visibility="@{model.numeratorDenominatorSystem ? View.VISIBLE : View.GONE}"
                tools:visibility="visible" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/delete_schedule_bottom_button"
                style="@style/StandartBottomButtonStyle"
                android:layout_margin="@dimen/margin_small"
                android:onClick="@{v -> viewModel.onDelete(model)}"
                app:icon="@drawable/ic_delete"
                app:iconGravity="textStart"
                app:iconTint="@color/colorContentOnPrimary" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>
