<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="androidx.lifecycle.LiveData" />

        <variable
            name="showProgress"
            type="LiveData&lt;Boolean>" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorBackgroundPrimary">

        <include
            android:id="@+id/layout_toolbar"
            layout="@layout/item_toolbar_simple"
            bind:navigationIcon="@{null}"
            bind:title="@{@string/screen_title_schedules_manager}" />

        <include layout="@layout/item_toolbar_drop_shadow" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_schedules"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="?attr/paddingMedium"
            tools:itemCount="4"
            tools:listitem="@layout/list_item_schedule"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_toolbar" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add_schedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="?attr/marginBig"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_toolbar"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="?attr/iconAdd"
            tools:ignore="ContentDescription" />

        <include
            android:id="@+id/layout_progress"
            layout="@layout/item_progress"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_toolbar"
            bind:isBlocking="@{true}"
            bind:showProgress="@{showProgress}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
