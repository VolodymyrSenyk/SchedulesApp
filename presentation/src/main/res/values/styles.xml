<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">

        <item name="recyclerViewStyle">@style/RecyclerView</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="android:navigationBarColor">?attr/colorAccent</item>
        <item name="android:itemTextAppearance">@style/Toolbar.MenuText</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccentDark">@color/colorAccentDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorAccentLight">@color/colorAccentLight</item>
        <item name="colorBackgroundPrimary">@color/colorBackgroundPrimary</item>
        <item name="colorBackgroundSurface">@color/colorBackgroundSurface</item>
        <item name="colorBackgroundOnSurface">@color/colorBackgroundOnSurface</item>
        <item name="colorContentOnPrimary">@color/colorContentOnPrimary</item>
        <item name="colorContentPrimary">@color/colorContentPrimary</item>
        <item name="colorContentSecondary">@color/colorContentPrimary</item>
        <item name="colorContentLinks">@color/colorContentLinks</item>
        <item name="colorContentFaded">@color/colorContentFaded</item>
        <item name="colorDivider">@color/colorDivider</item>
        <item name="colorBorders">@color/colorBorders</item>
        <item name="colorSuccess">@color/colorSuccess</item>
        <item name="colorWarning">@color/colorWarning</item>
        <item name="colorError">@color/colorError</item>

        <item name="iconDay">@drawable/ic_day</item>
        <item name="iconNight">@drawable/ic_night</item>
        <item name="iconAdd">@drawable/ic_add</item>
        <item name="iconEdit">@drawable/ic_pencil</item>
        <item name="iconSave">@drawable/ic_floppy_disk</item>
        <item name="iconCancel">@drawable/ic_close</item>
        <item name="iconDelete">@drawable/ic_trash_box</item>
        <item name="iconBackspace">@drawable/ic_backspace</item>
        <item name="iconBack">@drawable/ic_arrow_back</item>
        <item name="iconCreateBackup">@drawable/ic_up_arrow</item>
        <item name="iconApplyBackup">@drawable/ic_save_file</item>
        <item name="iconMenuOther">@drawable/ic_menu</item>
        <item name="iconPassword">@drawable/ic_padlock</item>
        <item name="iconInfo">@drawable/ic_info</item>
        <item name="iconHelp">@drawable/ic_help</item>
        <item name="iconWarning">@drawable/ic_warning</item>
        <item name="iconVisibility">@drawable/ic_visibility</item>
        <item name="iconVisibilityOff">@drawable/ic_visibility_off</item>
        <item name="iconEmptyStatePlaceholder">@drawable/ic_g_clef_musical_note</item>

        <item name="backgroundMain">@drawable/bg_gradient_radial</item>
        <item name="backgroundCustomToast">@drawable/bg_custom_toast</item>

    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AppBarLayoutStub">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">@dimen/elevation_big</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.DayNight.ActionBar</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.DayNight</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation">@dimen/elevation_big</item>
        <item name="titleTextColor">?attr/colorContentOnPrimary</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">?attr/colorContentOnPrimary</item>
    </style>

    <style name="Toolbar.MenuText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">?attr/colorContentOnPrimary</item>
        <item name="android:iconTint">?attr/colorContentOnPrimary</item>
    </style>

    <style name="RecyclerView">
        <item name="android:itemPadding">@dimen/padding_small</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_big</item>
        <item name="android:backgroundTint">?attr/colorAccentDark</item>
        <item name="tint">?attr/colorContentOnPrimary</item>
        <item name="maxImageSize">18dp</item>
    </style>

    <!-- -->
    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="android:background">@color/colorControls</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationItemActive</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationItemInactive</item>
    </style>

    <style name="BottomNavigationItemInactive" parent="Widget.Design.BottomNavigationView">
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:textSize">@dimen/text_size_very_small</item>
    </style>

    <style name="BottomNavigationItemActive" parent="Widget.Design.BottomNavigationView">
        <item name="android:textColor">@color/colorPrimaryInversed</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    <!-- -->

    <style name="SimpleTextFieldStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="PairDataOutputFieldStyle" parent="SimpleTextFieldStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/borders_width</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/data_output_box</item>
    </style>

    <style name="PairDataInputFieldTheme">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorBackground</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:colorBackground">@color/colorPrimaryInversed</item>
        <item name="android:maxLines">2</item>
        <item name="android:maxLength">50</item>
    </style>

    <style name="PairDataInputFieldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:drawable/editbox_background</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <!-- Date/Time Pickers dialogs -->
    <style name="TimePickerDialogTheme" parent="@style/ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimary">@color/colorPrimaryInversed</item>
        <item name="android:textColorSecondary">@color/colorPrimaryInversedFaded</item>
        <item name="android:buttonBarButtonStyle">@style/PickerDialogButtonStyle</item>
    </style>

    <style name="PickerDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:colorBackground">@color/colorPrimaryInversed</item>
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    <!-- -->

</resources>
