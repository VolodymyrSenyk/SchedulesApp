<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.textfield.TextInputLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/new_schedule_name_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryInversed"
    android:hint="@string/schedule_name_input_hint"
    android:paddingStart="@dimen/padding_main"
    android:paddingTop="@dimen/padding_main"
    android:paddingEnd="@dimen/padding_main"
    android:textColorHint="@color/colorBackground"
    app:counterEnabled="true"
    app:counterMaxLength="60"
    app:counterOverflowTextAppearance="@style/ErrorTextAppearance"
    app:counterTextAppearance="@style/HintInputTextAppearance"
    app:hintTextAppearance="@style/HintInputTextAppearance">

    <com.senyk.volodymyr.schedulesapp.view.customviews.CustomTextInputField
        android:id="@+id/new_schedule_name"
        style="@style/PairDataInputFieldStyle"
        android:maxLength="60" />

</com.google.android.material.textfield.TextInputLayout>
