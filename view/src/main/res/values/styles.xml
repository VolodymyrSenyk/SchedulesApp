<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="BottomNavigationItemInactive" parent="Widget.Design.BottomNavigationView">
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:textSize">@dimen/nav_item_inactive</item>
    </style>

    <style name="BottomNavigationItemActive" parent="Widget.Design.BottomNavigationView">
        <item name="android:textColor">@color/colorPrimaryInversed</item>
        <item name="android:textSize">@dimen/nav_item_active</item>
    </style>

    <style name="StandartToolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:theme">?attr/actionBarTheme</item>
    </style>

    <style name="StandartRecyclerViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
        <item name="android:layout_marginLeft">@dimen/margin_medium</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="StandartBottomButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_big</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StandartFABStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/fab_margins</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ScreenTitleText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/title_text</item>
    </style>

    <style name="TitleText" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/title_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SimpleTextFieldStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_main</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/simple_text</item>
    </style>

    <style name="PairDataOutputFieldStyle" parent="SimpleTextFieldStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">@dimen/borders_width</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/output_box</item>
    </style>

    <style name="PairDataInputFieldTheme">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorBackground</item>
        <item name="android:textSize">@dimen/simple_text</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:colorBackground">@color/colorPrimaryInversed</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="PairDataInputFieldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:drawable/editbox_background</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="HintInputTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:textSize">@dimen/simple_text</item>
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorError</item>
        <item name="android:textSize">@dimen/simple_text</item>
    </style>

    <style name="AlertDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorPrimaryInversed</item>
    </style>

    <style name="TimePickerDialogTheme" parent="@style/ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimary">@color/colorPrimaryInversed</item>
        <item name="android:textColorSecondary">@color/colorPrimaryInversedFaded</item>
        <item name="android:buttonBarButtonStyle">@style/PickerDialogButtonStyle</item>
    </style>

    <style name="PickerDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:colorBackground">@color/colorPrimaryInversed</item>
        <item name="android:textColor">@color/colorBackground</item>
        <item name="android:textSize">@dimen/simple_text</item>
    </style>

</resources>
